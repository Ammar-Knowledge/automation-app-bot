    "test:scheduler": "cross-env LOG_LEVEL=warn NODE_ENV=test jest scheduler/test.js && standard",
    "test-watch": "cross-env NODE_ENV=test jest --watch",
    "test-coverage": "cross-env NODE_ENV=test standard && jest --collectCoverage && codecov",
    "lint": "standard --fix"
  },
  "dependencies": {
    "cache-manager": "^3.4.0",
    "cache-manager-ioredis": "^2.1.0",
    "colors": "^1.3.2",
    "express-prometheus-middleware": "^1.1.0",
    "handlebars": "^4.7.6",
    "jira-client": "^8.2.2",
    "js-yaml": "^3.14.0",
    "lodash": "^4.17.20",
    "minimatch": "^3.0.4",
    "moment-timezone": "^0.5.31",
    "node-fetch": "^2.6.1",
    "p-iteration": "^1.1.8",
    "probot": "^12.2.8",
    "prom-client": "^13.1.0"
  },
  "devDependencies": {
    "codecov": "^3.7.2",
    "cross-env": "^7.0.3",
    "jest": "^26.6.3",
    "nock": "13.3.1",
    "nodemon": "^2.0.3",
    "object-dot": "^1.7.0",
    "smee-client": "^1.2.3",
    "standard": "^16.0.3"
  },
  "engines": {
    "node": "14.21.3"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "jest": {
    "setupFiles": [
      "./__fixtures__/setup/jestSetUp.js"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "lib/**/*.js"
    ]
  },
  "bugs": {
    "url": "https://github.com/mergeability/mergeable/issues"
  },
  "homepage": "https://github.com/mergeability/mergeable#readme",
